<div class="panel panel-default">
        <div class="panel-heading">
                <h1>Sign up</h1>
        </div>

        <div class="panel-body">
                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>
                  <div class="form-group">
                          <!-- <%= f.label :first_name %> -->
                          <%= f.text_field :name, autofocus: true, :placeholder => 'First and Last name', class: "form-control" %>
                  </div>

                  <div class="form-group">
                          <!-- <%= f.label :email %> -->
                          <%= f.email_field :email, :placeholder => 'Enter your school Email', class: "form-control" %>
                  </div>

                  <div class="form-group">
                          <!-- <%= f.label :password %> -->
                          <%= f.password_field :password, :placeholder => 'Password', class: "form-control" %>
                          <br>
                          <!-- <%= f.label :password_confirmation %> -->
                          <%= f.password_field :password_confirmation, :placeholder => 'Password Confirmation', class: "form-control" %>
                  </div>

                  <div class="form-group">
                          <%= f.submit "Sign up", class: "btn btn-primary" %>
                  </div>
                <% end %>
        </div>

        <div class="panel-footer">
                <%= render "devise/shared/links" %>
        </div>
</div>